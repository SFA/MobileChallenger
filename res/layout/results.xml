<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <TextView android:id="@+id/welcome_text"
              android:text="Player1 vs Player2"
              android:textColor="#FF9933"
              android:textSize="18px"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"/>
    <TextView android:id="@+id/versus_text"
              android:text="Submit Results"
              android:textColor="#FF9933"
              android:textSize="12px"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/welcome_text"/>
    <TextView android:id="@+id/password_text"
              android:text="Opponent's Password:"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/versus_text"/>
    <EditText android:id="@+id/txt_password"
              android:password="true"
              android:layout_height="wrap_content"
              android:layout_width="250px"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/password_text"
              android:singleLine="true" />
    <TextView android:id="@+id/opp_score_text"
              android:text="Opponent's Score:"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txt_password"/>
    <EditText android:id="@+id/txt_opp_score"
              android:layout_height="wrap_content"
              android:layout_width="250px"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/opp_score_text"
              android:singleLine="true" />
    <TextView android:id="@+id/your_score_text"
              android:text="Your Score:"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txt_opp_score"/>
    <EditText android:id="@+id/txt_your_score"
              android:layout_height="wrap_content"
              android:layout_width="250px"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/your_score_text"
              android:singleLine="true" />
    <TextView android:id="@+id/trash_talk_text"
              android:text="Trash Talk'n:"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/txt_your_score"/>
    <EditText android:id="@+id/txt_trash_talk"
              android:layout_height="wrap_content"
              android:layout_width="250px"
              android:layout_centerHorizontal="true"
              android:layout_below="@+id/trash_talk_text"
              android:singleLine="true" />
    <Button android:id="@+id/score_it_button"
            android:text="Score It!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_trash_talk"/>
</RelativeLayout>